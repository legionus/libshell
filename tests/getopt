}

getopt_test017() { # UnitTest
	LANG=C
	. ../shell-getopt
	expect=' -a -b -- 
 -a -b -- 
 -a -b -- '
	result=`for i in 1 2 3; do getopt -n TEST -o 'a,b' -- -ab; done 2>&1`
	assertEquals "$result" "$result" "$expect"
}

